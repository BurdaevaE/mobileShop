<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context=".RegistrationActivity" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/registrationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/ra_registrationText"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ra_nameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrationHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:hint="@string/ra_nameHint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ra_surnameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_nameEdit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/ra_surnameHint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ra_phoneNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_surnameEdit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/ra_phoneNumberHint"
            android:inputType="phone" />

        <EditText
            android:id="@+id/ra_loginEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_phoneNumberEdit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/ra_loginHint" />

        <EditText
            android:id="@+id/ra_emailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_loginEdit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/ra_emailHint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ra_passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_emailEdit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/ra_passwordHint"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/ra_confirmPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_passwordEdit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/ra_confirmPasswordHint"
            android:inputType="textPassword" />
        
        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra_confirmPasswordEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/ra_agreementCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ra_agreementCheckbox" />
            
           	<TextView
           	    android:id="@+id/ra_terms"
           	    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ra_agreementCheckbox"
                android:layout_toEndOf="@+id/ra_agreementCheckbox"
                android:text="@string/ra_terms"
                android:layout_alignBaseline="@+id/ra_agreementCheckbox" />
            
        </RelativeLayout>

        <Button
            android:id="@+id/ra_registrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/ra_registrationButton" />

    </RelativeLayout>

</ScrollView><!-- From: file:/C:/StudioProjects/fragments/app/src/main/res/layout/activity_registration.xml -->